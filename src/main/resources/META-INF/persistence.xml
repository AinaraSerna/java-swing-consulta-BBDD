        <class>es.althaia.buscadorbd.clases.Clientes</class>
        <class>es.althaia.buscadorbd.clases.Expedientes</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:oracle:thin:@192.168.1.85:1521:XE"/>
